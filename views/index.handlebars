<h1>Eat-Da-Burger</h1>
<img src="../public/assets/images/burger.png">

<h2>Saved Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <div>
        <p>
          {{id}}
          {{burger_name}}
        </p>
        <button class="changeDevour" data-id="{{id}}" data-newdevour="{{devour}}">
            Devour!
        </button>
      </div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <div>
        <p>
          {{id}}
          {{burger_name}}
        </p>
      </div>  
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Describe your desired burger:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
